# Production Environment Configuration
# Copy this file to .env and update with your production values
# NEVER commit .env to version control!

# Database Configuration
# Use localhost when running Postgres via Docker on same VM
DATABASE_URL="postgresql://admin:CHANGE_ME_STRONG_PASSWORD@localhost:5432/adminDB?schema=public"

# Server Configuration
PORT=8080
NODE_ENV=production

# CORS Configuration
# Update with your frontend domain (e.g., https://yourdomain.com)
CORS_ORIGIN=https://ghostrooms.duckdns.org

# File Server Configuration
# Nginx proxies /files/ to the DUFS server
FILE_SERVER_URL=http://localhost:6969
PUBLIC_URL=https://ghostrooms.duckdns.org

# Room Configuration (Optional - defaults are set in config.ts)
ROOM_TTL_HOURS=24
ROOM_MAX_CAPACITY=50

# Rate Limiting (Optional - defaults are set in config.ts)
RATE_LIMIT_MESSAGES_PER_MINUTE=10
RATE_LIMIT_ROOM_CREATE_PER_HOUR=10

# Message Configuration (Optional - defaults are set in config.ts)
MAX_MESSAGE_LENGTH=2000
MAX_FILE_SIZE_MB=10
